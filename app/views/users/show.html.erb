<div class="row form user_profile">
  <div class="col-lg-12">
    <% if @user.image %>
      <div class="image" style="background-image: url(<%= rails_blob_path(@user.image) %>) "></div>
    <% else %> 
      <div class="image" style="background-image:url(<%= asset_path "no_image.jpg" %>)" />
    <% end %>  
    <h2><%= @user.name %><span><%= @user.name_kana %></span></h2>
  </div>
</div>